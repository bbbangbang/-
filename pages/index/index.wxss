.article-item {
  margin-bottom: 15px;
  padding: 0;
  border: 1px solid #ccc;
  border-radius: 5px;
  overflow: hidden;
  height: 100px; /* 设置格子的高度 */
  display: flex;
  justify-content: center;
  align-items: center;
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 确保图片按比例覆盖整个容器 */
  object-position: center; /* 保持图片中心对齐 */
}

