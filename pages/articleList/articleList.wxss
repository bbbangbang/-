/* pages/articleList/articleList.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #f5f5f5;
}

.article-item {
  margin: 100px 0;
  width: 200%; /* 控制每个文章项的宽度，使其占满整行 */
  border: 1px solid #ddd;
  border-radius: 8px;
  background-color: #fff;
  display: flex;
  flex-direction: row; /* 横向排列内容 */
  align-items: center;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.cover-image {

    width: 100px;
    height: 100px;
    background-size: cover;
  
}

.article-content {
  padding: 10px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 70%;
}

.article-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 5px;
}

.article-description {
  font-size: 14px;
  color: #666;
}
